@model hienv_asp.Models.Language
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Created";
    Layout = "_Layout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6 text-right">
                <button type="submit" form="form-language" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Save"><i class="fa fa-save"></i></button>
                <a asp-controller="Languages" asp-action="Index" asp-area="Admin" data-toggle="tooltip" title="" class="btn btn-light" data-original-title="Cancel"><i class="fa fa-reply"></i></a>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-pencil-alt"></i> Add Language</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="row">
                                <div class="col-sm-12 col-md-6"></div>
                                <div class="col-sm-12 col-md-6"></div>
                            </div>
                            <div class="row form-group-custom">
                                <form asp-controller="Languages" asp-action="Create" asp-area="Admin" method="post" id="form-language">
                                    <div class="form-group required">
                                        <label asp-for="name" class="col-sm-2 control-label">Language Name</label>
                                        <div class="col-sm-10">
                                            <input asp-for="name" placeholder="Language Name" id="country-name" class="form-control" />
                                            <span asp-validation-for="name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group required">
                                        <label asp-for="code" class="col-sm-2 control-label">Code</label>
                                        <div class="col-sm-10">
                                            <input asp-for="code" placeholder="Code" id="code" class="form-control" />
                                            <span asp-validation-for="code" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group required">
                                        <label asp-for="locale" class="col-sm-2 control-label">Locale</label>
                                        <div class="col-sm-10">
                                            <input asp-for="locale" placeholder="Locale" id="locale" class="form-control" />
                                            <div class="form-text">Example: en_US.UTF-8,en_US,en-gb,en_gb,english</div>
                                            <span asp-validation-for="locale" class="text-danger"></span>
                                        </div>
                                    </div> 
                                    <div class="form-group">
                                        <label asp-for="status" class="col-sm-2 control-label" for="input-status">Status</label>
                                        <div class="col-sm-10">
                                            <select asp-for="status" name="status" id="input-status" class="custom-select">
                                                <option value="1" selected="selected">Enabled</option>
                                                <option value="0">Disabled</option>
                                            </select>
                                            <div class="form-text">Hide/Show it in language dropdown</div>
                                        </div>
                                    </div>
                                    <div class="form-group required">
                                        <label asp-for="sort_order" class="col-sm-2 control-label">Sort Order</label>
                                        <div class="col-sm-10">
                                            <input asp-for="sort_order" placeholder="Sort Order" id="sort_order" class="form-control" />
                                            <span asp-validation-for="sort_order" class="text-danger"></span>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/lib/plugins/codemirror/codemirror.js"></script>
    <script src="~/js/category.js"></script>
}